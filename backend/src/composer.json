{
    "name": "jimmy4fingers/rest-api",
    "description": "A Slim Framework Rest API skeleton",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "monolog/monolog": "^1.24",
        "php": ">=7.1",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "codeception/c3": "^2.4",
        "codeception/codeception": "^2.5",
        "fzaninotto/faker": "^1.8",
        "michaelmoussa/php-coverage-checker": "^1.1",
        "phpmd/phpmd": "^2.7",
        "phpstan/phpstan": "^0.11.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
